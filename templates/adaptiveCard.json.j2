{
  "type": "message",
  "attachmentLayout": "carousel",
  "attachments": [
    {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.4",
        "body": [
            {
                "type": "TextBlock",
                "text": "Speiseplan",
                "wrap": true,
                "fontType": "Monospace",
                "size": "ExtraLarge",
                "weight": "Bolder",
                "color": "Good"
            },
            {
                "type": "TextBlock",
                "text": "{{ tag_heute }}.{{ monat_heute }}.{{ jahr_heute }}",
                "wrap": true
            },
            {
                "type": "Image",
                "url": "{{ giphy_image }}"
            }
        ]
    },
    {
        "type": "AdaptiveCard",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.4",
        "body": [
            {
                "type": "TextBlock",
                "text": "Speiseplan",
                "wrap": true,
                "size": "ExtraLarge",
                "weight": "Bolder",
                "color": "Default",
                "fontType": "Monospace"
            },
            {
                "type": "TextBlock",
                "wrap": true,
                "text": "{{ tag_heute }}.{{ monat_heute }}.{{ jahr_heute }}"
            },
            {
                "type": "TextBlock",
                "wrap": true,
                "text": "Karte Heute",
                "weight": "Bolder",
                "size": "Large",
                "fontType": "Monospace"
            },
            {% for gericht in essen_heute %}
            {
                "type": "Container",
                "items": [
                    {
                        "type": "TextBlock",
                        "wrap": true,
                        "text": "{{ gericht.name }}",
                        "fontType": "Monospace",
                        "size": "Medium",
                        "weight": "Bolder"
                    },
                    {
                        "type": "TextBlock",
                        "wrap": true,
                        "horizontalAlignment": "Right",
                        "text": "{{ gericht.preis }}",
                        "fontType": "Monospace",
                        "size": "Default"
                    }
                ],
                "separator": true
            }{%if loop.index < essen_heute | length %},{% endif %}
            {% endfor %}
        ],
        "verticalContentAlignment": "Top"
    }
  ]
}